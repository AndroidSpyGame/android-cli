<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".VotingFragment">

    <TextView
        android:id="@+id/textVoting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Голосование"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik_light"
        android:textSize="30dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/custom_voting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerViewVoting"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="300dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/textVoting"-->
<!--        app:layout_constraintVertical_bias="0.26999998"-->
<!--        tools:itemCount="5"-->
<!--        tools:listitem="@layout/item_player_voting" />-->

    <Button
        android:id="@+id/deletePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выгнать игрока"
        android:backgroundTint="@color/removePlayer"
        android:textSize="20dp"
        android:fontFamily="@font/rubik_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/deletePlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVoting">

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:padding="20dp"
            android:fontFamily="@font/rubik_light"
            app:layout_constraintBottom_toTopOf="@+id/deletePlayer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textVoting">

            <RadioButton
                android:id="@+id/example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_test"
                android:button="@drawable/custom_icon"
                android:paddingHorizontal="10dp"
                android:text="Example"
                android:textSize="20sp" />
        </RadioGroup>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>